%select{:name=> :grade_span_expectation_id, :size => 4}
  - related_gses.each do |gse|
    -if (local_assigns.has_key? :selected_gse) && selected_gse.id == gse.id
      %option{:value => gse.id, :onClick =>"$('gse_summary_container').innerHTML='#{short_format_gse_summary(gse)}'", :selected => true}= gse.gse_key
    -else
      %option{:value => gse.id, :onClick =>"$('gse_summary_container').innerHTML='#{short_format_gse_summary(gse)}'"}= gse.gse_key
