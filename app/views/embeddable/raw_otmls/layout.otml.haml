!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @raw_otml.uuid}
  =ot_imports
  %objects
    %OTSystem
      =ot_bundles(:title => h(@raw_otml.name))
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = h(Embeddable::RawOtml.display_name + ': ' + @raw_otml.name)
              %object{ :refid => ot_refid_for(@raw_otml) }
      %library
        = content_for :layout