!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @inner_page.uuid}
  =ot_imports
  %objects
    %OTSystem
      =ot_bundles(:title => h(@inner_page.name))
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = h(Embeddable::InnerPage.display_name + ': ' + @inner_page.name)
              %object{ :refid => ot_refid_for(@inner_page) }
      %library
        = content_for :layout