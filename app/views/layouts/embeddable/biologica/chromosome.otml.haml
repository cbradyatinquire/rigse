!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @biologica_chromosome.uuid}
  =ot_imports
  %objects
    %OTSystem{:local_id => 'system'}
      =ot_bundles(:title => h(@biologica_chromosome.name))
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = h(Embeddable::Biologica::Chromosome.display_name + ': ' + @biologica_chromosome.name)
              %object{ :refid => ot_refid_for(@biologica_chromosome) }
      %library
        = content_for :layout