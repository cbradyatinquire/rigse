!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @data_collector.uuid}
  =ot_imports
  %objects
    %OTSystem{:local_id => 'system'}
      =ot_bundles(:title => h(@data_collector.name), :authoring => @authoring)
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = h(Embeddable::DataCollector.display_name + ': ' + @data_collector.name)
              %object{ :refid => ot_refid_for(@data_collector) }/
      %library
        = content_for :layout