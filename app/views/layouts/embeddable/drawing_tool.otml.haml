!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @drawing_tool.uuid}
  =ot_imports
  %objects
    %OTSystem{:local_id => 'system'}
      =ot_bundles(:title => h(@drawing_tool.name))
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = h(Embeddable::DrawingTool.display_name + ': ' + @drawing_tool.name)
              %object{ :refid => ot_refid_for(@drawing_tool) }/
      %library
        = content_for :layout