- section = (@offering.clazz.section && @offering.clazz.section.length > 0) ? @offering.clazz.section : nil
- section = (section ? "(#{section})" : "")
- show_print = true
- @learners.each do |learner|
  - set_content_for :report_title do
    = "Report for: #{learner.name}, #{@offering.clazz.name} #{section}"
  - set_content_for :report_summary do
    = learner_report_summary(learner, {:show_selection_controls => false})
  = render :partial => '/portal/reports/report', :locals => {:report_context => learner, :offering => @offering, :learners => learner, :page_elements => @page_elements, :show_selection_controls => false, :show_print_controls => show_print, :show_print_all => false}
  - show_print = false