!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @<%= singular_name %>.uuid}
  =ot_imports
  %objects
    %OTSystem
      =ot_bundles(:title => @<%= singular_name %>.name)
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = <%= class_name %>.display_name + ': ' + @<%= singular_name %>.name
              %object{ :refid => ot_refid_for(@<%= singular_name %>) }
      %library
        = content_for :layout